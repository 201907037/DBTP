<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:rowCount="2"
    android:columnCount="3">
    <ImageView
        android:id="@+id/m_img"
        android:src="@drawable/yak1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_marginRight="5dp"
        android:scaleType="fitXY"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="0">
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:textSize="23sp"
            android:text="이름 :"
            android:textColor="@color/black"
            android:layout_marginBottom="30dp"
            />
        <TextView
            android:id="@+id/classification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:textSize="23dp"
            android:text="분류 : "
            android:textColor="@color/black"
            android:layout_marginBottom="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:textColor="@color/black"
            android:layout_below="@+id/classification"
            android:text="특징 : "/>

    </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="0">

            <TextView
                android:id="@+id/DB_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="23sp"
                android:layout_marginBottom="30dp"/>

            <TextView
                android:id="@+id/DB_classification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="23sp"
                android:layout_marginBottom="30dp"
                android:layout_below="@+id/DB_name"/>
            <TextView
                android:id="@+id/DB_characteristic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="23sp"
                android:layout_below="@id/DB_classification"/>
        </RelativeLayout>
        <TextView

            android:id="@+id/DB_detail"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_columnSpan="3"
            android:layout_gravity="fill_horizontal"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text=""/>


</GridLayout>